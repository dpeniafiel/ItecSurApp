<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ItecSurApp.views.inicio.InicioMenu" Title="Menú"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">

            <Button Text="Periodo" x:Name="btnPeriodo" BackgroundColor="White" ImageSource="icono.png" Clicked="btnPeriodo_Clicked" />
            <Button Text="Carrera" x:Name="btnCarrera" BackgroundColor="White" ImageSource="icono.png" Clicked="btnCarrera_Clicked"/>
            <Button Text="Nivel" x:Name="btnNivel" BackgroundColor="White" ImageSource="icono.png" />
            <Button Text="Jornada" x:Name="btnJornada" BackgroundColor="White" ImageSource="icono.png" />
            <Button Text="Inscripcion" x:Name="btnInscripcion" BackgroundColor="White" ImageSource="icono.png" />

            <Button Text="Perfil usuario" x:Name="btnPerfil" BackgroundColor="White" ImageSource="iconoseg.png"/>
            <Button Text="Usuario" x:Name="btnUsuario" BackgroundColor="White" ImageSource="iconoseg.png"  />
            <Button Text="Administrar permisos" x:Name="btnPermisos" BackgroundColor="White" ImageSource="iconoseg.png" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>